<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.codejack.bjstats2.ProgressFragment">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10sp">

        <ProgressBar
            android:minHeight="40sp"
            android:maxHeight="40sp"
            android:layout_marginBottom="10sp"
            android:id="@+id/progress_loading_frag"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_loading_start"
            android:text="@string/main_button_start"
            android:layout_below="@id/progress_loading_frag"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:background="@color/colorGreen"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"/>

        <RelativeLayout
            android:id="@+id/layout_relative_results"
            android:layout_below="@id/button_loading_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="5sp">

            <TextView
                android:id="@+id/result_box_games"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/colorG7"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="20sp"
                android:lines="1"
                android:paddingLeft="5sp"
                android:layout_marginBottom="10sp"/>

            <TextView
                android:text="Games Played: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:textColor="@color/colorG2"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="16sp"
                android:lines="1"
                android:paddingRight="5sp"/>

            <TextView
                android:id="@+id/result_box_hands"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/result_box_games"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/colorG7"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="20sp"
                android:lines="1"
                android:paddingLeft="5sp"
                android:layout_marginBottom="10sp" />

            <TextView
                android:text="Individual hands: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/result_box_games"
                android:gravity="center_vertical"
                android:textColor="@color/colorG2"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="16sp"
                android:lines="1"
                android:paddingRight="5sp"/>

            <TextView
                android:id="@+id/result_box_wins"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/result_box_hands"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/colorG7"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="20sp"
                android:lines="1"
                android:paddingLeft="5sp"
                android:layout_marginBottom="10sp" />

            <TextView
                android:text="Wins: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/result_box_hands"
                android:gravity="center_vertical"
                android:textColor="@color/colorG2"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="16sp"
                android:lines="1"
                android:paddingRight="5sp"/>

            <TextView
                android:id="@+id/result_box_draws"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/result_box_wins"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/colorG7"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="20sp"
                android:lines="1"
                android:paddingLeft="5sp"
                android:layout_marginBottom="10sp" />

            <TextView
                android:text="Draws: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/result_box_wins"
                android:gravity="center_vertical"
                android:textColor="@color/colorG2"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="16sp"
                android:lines="1"
                android:paddingRight="5sp"/>

            <TextView
                android:id="@+id/result_box_losses"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/result_box_draws"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/colorG7"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="20sp"
                android:lines="1"
                android:paddingLeft="5sp"
                android:layout_marginBottom="10sp" />

            <TextView
                android:text="Losses: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/result_box_draws"
                android:gravity="center_vertical"
                android:textColor="@color/colorG2"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="16sp"
                android:lines="1"
                android:paddingRight="5sp"/>

            <TextView
                android:id="@+id/result_box_wins_units"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/result_box_losses"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/colorG7"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="20sp"
                android:lines="1"
                android:paddingLeft="5sp"
                android:layout_marginBottom="10sp" />

            <TextView
                android:text="Units won: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/result_box_losses"
                android:gravity="center_vertical"
                android:textColor="@color/colorG2"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="16sp"
                android:lines="1"
                android:paddingRight="5sp"/>

            <TextView
                android:id="@+id/result_box_losses_units"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/result_box_wins_units"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/colorG7"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="20sp"
                android:lines="1"
                android:paddingLeft="5sp"
                android:layout_marginBottom="10sp" />

            <TextView
                android:text="Units lost: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/result_box_wins_units"
                android:gravity="center_vertical"
                android:textColor="@color/colorG2"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="16sp"
                android:lines="1"
                android:paddingRight="5sp"/>

            <TextView
                android:id="@+id/result_box_blackjacks"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/result_box_losses_units"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/colorG7"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="20sp"
                android:lines="1"
                android:paddingLeft="5sp"
                android:layout_marginBottom="10sp" />

            <TextView
                android:text="Player blackjack rate: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/result_box_losses_units"
                android:gravity="center_vertical"
                android:textColor="@color/colorG2"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="16sp"
                android:lines="1"
                android:paddingRight="5sp"/>

            <TextView
                android:id="@+id/result_box_dealer_bust"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/result_box_blackjacks"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/colorG7"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="20sp"
                android:lines="1"
                android:paddingLeft="5sp"
                android:layout_marginBottom="10sp" />

            <TextView
                android:text="Dealer bust rate: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/result_box_blackjacks"
                android:gravity="center_vertical"
                android:textColor="@color/colorG2"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="16sp"
                android:lines="1"
                android:paddingRight="5sp"/>

            <TextView
                android:id="@+id/result_box_house_edge"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/result_box_dealer_bust"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/colorG7"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="20sp"
                android:lines="1"
                android:paddingLeft="5sp"
                android:layout_marginBottom="10sp" />

            <TextView
                android:text="House edge: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/result_box_dealer_bust"
                android:gravity="center_vertical"
                android:textColor="@color/colorG2"
                android:minHeight="48sp"
                android:maxHeight="48sp"
                android:padding="5sp"
                android:textSize="16sp"
                android:lines="1"
                android:paddingRight="5sp"/>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
